<p class="notice"><%= flash[:notice] %></p>

<h2>User info</h2>
<div class="profile-container">
  <%= attachment_image_tag @user, :profile_image, :fill,10,10,fallback: "no_image.jpg"%>
  <table>
    <tbody>
      <tr></tr>
      <tr>
        <th>name</th>
        <th><%= @user.name %></th>
      </tr>
      <tr>
        <th>introduction</th>
        <th><%= @user.introduction %></th>
      </tr>
    </tbody>
  </table>
  
  <%if @user.id == current_user.id %>
   <p><%= link_to "プロフィール編集",edit_user_path(@user) %></p>
  <%end%> 
</div>

<h1>Books</h1>

<table>
  <thead>
    <th></th>
    <th>Title</th>
    <th>Opinion</th>
    <th colspan="3"></th>
  </thead>

  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= attachment_image_tag @user, :profile_image, :fill,10,10,fallback: "no_image.jpg"%></td>
      <td>
        <%= link_to book_path(book.id) do %>
         <%= book.title %>
        <%end%>
      </td>  
      <td><%= book.body %></td>
    <%end%>
    </tr>
  </tbody>
</table>

<h2>New Book</h2>
<%= form_with model:@book,local:true do |f| %>

 <div class="field">
   <%= f.label :title %>
   <%= f.text_field :title %>
 </div>

 <div class="field">
   <%= f.label :opinion %>
   <%= f.text_area :body %>
 </div>

 <div class="actions">
   <%= f.submit 'Create Book' %>
 </div>

<%end%>